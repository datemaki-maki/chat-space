.chat-main
  .main-group
    %ul.main-group__info
      %li.main-group__info__name test
      %li.main-group__info__member-name Member:masa
    =link_to "Edit", "#", class: 'chat-main__edit'
  .main-message
    %ul.main-message__list
      %li.main-message__list__name masa <span>2019/11/20(Wed) 17:43:01</span>
      %li.main-message__list__comment おはよう!
    %ul.main-message__list2
      %li.main-message__list2__name masa <span>2019/11/20(Wed) 17:43:34</span>
      %li.main-message__list2__comment 今日は夜から雨
  .main-form
    %form.main-form__message
      %div.main-form__message__text
        %input.input-text{type: "text", placeholder: "type a message"}
        %label.input-picture-icon
          = icon('far', 'image', class: 'picture')
          %input.input-picture{type: "file"}
      %input.submit-btn{type: "submit" ,value: "Send"}
