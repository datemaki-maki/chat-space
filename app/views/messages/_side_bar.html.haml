.side-bar
  .side-header
    .side-header__box
      %p.side-header__box__name
        = current_user.name
      %ul.side-header__box__icon
        %li.icon__edit
          = link_to new_group_path, class: "Contents__btn" do
            = icon('far', 'edit', class: 'edit')
        %li.icon__creation
          = link_to edit_user_path(current_user), class: "Contents__btn" do
            = icon('fas', 'cog', class: 'creation')

  .side-groups
    - current_user.groups.each do |group|
      .side-groups__list
        = link_to group_messages_path(group) do
          .group-name
            = group.name
          .new-message
            = group.show_last_message
